
SHELL=/bin/bash

# Index posts every 5 minutes
*/5 * * * * /export/www/apps/biostar-engine/scripts/forum/search-index.sh >> /export/www/apps/biostar-engine/export/logs/crontab.log 2>&1

# Batch award users every 30 minutes
*/30 * * * * /export/www/apps/biostar-engine/scripts/forum/user-awards.sh >> /export/www/apps/biostar-engine/export/logs/crontab.log 2>&1

# Hourly database backup
0 * * * * /export/www/apps/biostar-engine/scripts/forum/backup-hourly.sh >> /export/www/apps/biostar-engine/export/logs/crontab.log 2>&1

# Daily database backup -- midnight
0 0 * * * /export/www/apps/biostar-engine/scripts/forum/backup-daily.sh >> /export/www/apps/biostar-engine/export/logs/crontab.log 2>&1

# Daily digest -- midnight
0 0 * * * /export/www/apps/biostar-engine/scripts/forum/digest-daily.sh >> /export/www/apps/biostar-engine/export/logs/crontab.log 2>&1

# Weekly digest -- sunday midnight
0 0 * * 0 /export/www/apps/biostar-engine/scripts/forum/digest-weekly.sh >> /export/www/apps/biostar-engine/export/logs/crontab.log 2>&1

# Monthly digest
0 0 1 * * /export/www/apps/biostar-engine/scripts/forum/digest-monthly.sh >> /export/www/apps/biostar-engine/export/logs/crontab.log 2>&1

# Planet daily update
0 0 * * * /export/www/apps/biostar-engine/scripts/forum/planet-daily.sh >> /export/www/apps/biostar-engine/export/logs/crontab.log 2>&1

# Planet hourly
0 * * * * /export/www/apps/biostar-engine/scripts/forum/planet-hourly.sh >> /export/www/apps/biostar-engine/export/logs/crontab.log 2>&1

